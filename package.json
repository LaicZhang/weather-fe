{
  "name": "weather-fe",
  "version": "1.0.0",
  "type":"module",
  "scripts": {
    "dev": "vite --host --open",
    "build": "vite build --mode production",
    "preview": "vite preview",
    "serve": "serve -s dist",
    "lint:script": "eslint . --fix",
    "lint:style": "stylelint --fix \"src/**/*.(vue|less|css)\" --customSyntax postcss-less",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@types/lodash-es": "^4.17.12",
    "@vueuse/core": "^11.1.0",
    "axios": "^1.7.7",
    "echarts": "^5.5.1",
    "element-plus": "~2.8.3",
    "rollup": "4.21.3",
    "stylelint-prettier": "^4.1.0",
    "ts-node": "^10.9.2",
    "vite": "^5.3.5",
    "vite-plugin-chunk-split": "^0.5.0",
    "vue": "^3.5.4",
    "vue-router": "^4.4.5",
    "vue-simple-password-meter": "^1.3.4",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@amatlash/vite-plugin-stylelint": "^1.2.0",
    "@antfu/eslint-config": "^2.27.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@iconify/json": "^2.2.250",
    "@types/node": "^22.2.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "commitlint": "^19.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jsdom": "^25.0.0",
    "less": "^4.2.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "postcss-html": "^1.7.0",
    "postcss-import": "16.1.0",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.8",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.6.2",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-icons": "^0.19.3",
    "unplugin-vue-components": "^0.27.4",
    "vitest": "^2.1.1"
  },
  "husky": {
    "pre-commit": "npm run lint"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,vue,json,md,html}": [
      "pnpm run lint:script",
      "git add --force"
    ],
    "**/*.{scss,vue,css}": [
      "pnpm run lint:style",
      "git add --force"
    ]
  }
}
