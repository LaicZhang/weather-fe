{
  "name": "weather-fe",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite --host --open",
    "build": "vite build --mode production",
    "preview": "vite preview",
    "serve": "serve -s dist",
    "lint:script": "eslint . --fix",
    "lint:style": "stylelint --fix \"src/**/*.(vue|less|css)\" --customSyntax postcss-less",
    "lint": "pnpm run lint:script && pnpm run lint:style",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "@types/lodash-es": "^4.17.9",
    "@vueuse/core": "^10.4.1",
    "axios": "^1.5.0",
    "echarts": "^5.4.3",
    "element-plus": "~2.3.12",
    "rollup": "3.29.1",
    "stylelint-prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "vite": "^4.4.9",
    "vite-plugin-chunk-split": "^0.4.4",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vue-simple-password-meter": "^1.3.4",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@amatlash/vite-plugin-stylelint": "^1.2.0",
    "@antfu/eslint-config": "^0.41.3",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@iconify/json": "^2.2.115",
    "@types/node": "^20.6.0",
    "@vitejs/plugin-vue": "^4.3.4",
    "autoprefixer": "^10.4.15",
    "commitlint": "^17.7.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "less": "^4.2.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.29",
    "postcss-html": "^1.5.0",
    "postcss-import": "15.1.0",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.8",
    "prettier": "^3.0.3",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.66.1",
    "stylelint": "^14.16.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^29.0.0",
    "typescript": "^5.2.2",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-icons": "^0.17.0",
    "unplugin-vue-components": "^0.25.2",
    "vitest": "^0.34.4"
  },
  "husky": {
    "pre-commit": "npm run lint"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,vue,json,md,html}": [
      "pnpm run lint:script",
      "git add --force"
    ],
    "**/*.{scss,vue,css}": [
      "pnpm run lint:style",
      "git add --force"
    ]
  },
  "eslintConfig": {
    "extends": "@antfu"
  }
}
